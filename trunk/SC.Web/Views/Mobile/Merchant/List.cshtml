@using SC.Models;
@Model MerchantDataModel;
@{
    Layout = null;
}
<!DOCTYPE HTML>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0"
        name="viewport" />
    <meta name='apple-mobile-web-app-capable' content='yes' />
    <meta content="black" name="apple-mobile-web-app-status-bar-style" />
    <meta content="telephone=no" name="format-detection" />
    <title>微站</title>
    <link href="/css/jquery.mobile-1.3.1.min.css" type="text/css" rel="stylesheet">
    <link href="/css/styles.css" rel="stylesheet" type="text/css">
    <script type="text/javascript" src="/js/jquery-1.8.1.js"></script>
    <script type="text/javascript" src="/js/jquery.mobile-1.3.1.min.js"></script>
    <script type="text/javascript" src="/js/v1.js"></script>
</head>
<body class="body">
    <div id="page" data-role="page">
        <div class="headerWrap" data-position="fixed" data-role="header" data-theme="a">
            <a href="javascript:windowBack()" class="back1" data-icon="back" data-transition="slide">
                返回</a>
            <h1>
                我的商家</h1>
            <a href="/MMerchant/AddFavorite" class="rbtn">添加</a>
        </div>
        <div class="sellerListWrap">
            <ul class="sellerList">
            @foreach (var item in Model)
            {
                <li><a href="/MMerchant/Detail/@item.ID"><span class="name">@item.Name</span> </a><span class="telWrap">
                </span></li>
            }
            </ul>
        </div>
    </div>
    <div class="zmask">
    </div>
    <div class="zTelPop">
        <div class="popTelWrap">
            <div class="peopleInfIntro">
                <div class="name">
                    林师傅
                </div>
                <div class="tel">
                    号码：0755-12563562
                </div>
            </div>
            <div class="btnbg">
                <a href="tel:0755-12563562">拨打电话</a></div>
            <!--    <div class="btnbg">发送短信(上门服务地址)</div>-->
            <div class="btnbg2">
                取消</div>
        </div>
    </div>
</body>
</html>
